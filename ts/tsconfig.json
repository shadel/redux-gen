{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es6",
        "lib": ["es2015", "es2017", "dom"],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../js"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./index.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts"
    ]
}
